<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>/var/log/infinistor/watcher/ifs-watcher.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                        <fileNamePattern>/var/log/infinistor/watcher/ifs-watcher.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                        <maxHistory>30</maxHistory>
                        <maxFileSize>100MB</maxFileSize>
                </rollingPolicy>
                <encoder>
                        <pattern>%-5level %d{HH:mm:ss.SSS} [%-6.6thread][%32.32(%logger{0}.%M:%5L)] : %msg%n</pattern>
                </encoder>
        </appender>

        <root level="info">
                <appender-ref ref="FILE" />
        </root>
</configuration>